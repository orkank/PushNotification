<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
    <group id="default">
        <job name="idangerous_pushnotification_process_queue" instance="IDangerous\PushNotification\Cron\ProcessNotificationQueue" method="execute">
            <schedule>*/1 * * * *</schedule>
        </job>
        <job name="idangerous_pushnotification_cleanup_orphaned_sent" instance="IDangerous\PushNotification\Cron\CleanupOrphanedSentRecords" method="execute">
            <schedule>0 2 * * *</schedule><!-- Daily at 02:00 AM -->
        </job>
    </group>
</config>
